Odyssey {
  Program = Stmt+
  Stmt = Expr
  Expr = AddExp
  AddExp = AddExp "+" MulExp  -- plus
         | AddExp "-" MulExp -- minus
         | MulExp
  
  MulExp = MulExp "*" PriExp -- times
         | MulExp "/" PriExp -- div
         | PriExp

  PriExp = PriVal
  PriVal = num | ident
  ident = letter alnum*
  num = digit+
  br = ";" | "\n"
}
